# ============================================
# Environment Variables Example
# Copy to .env and update with your values
# ============================================

# ============================================
# Database Configuration
# ============================================
DB_CONNECTION_STRING=Host=localhost;Port=5432;Database=MsHuyenLCDb;Username=postgres;Password=YourSecurePassword123!

# ============================================
# Redis Configuration
# ============================================
REDIS_CONNECTION_STRING=localhost:6379,user=default,password=YourRedisPassword123!
REDIS_INSTANCE_NAME=MsHuyenLC:

# ============================================
# MinIO Configuration
# ============================================
MINIO_DOMAIN=http://localhost:9000
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=YourMinioRootUser
MINIO_ROOT_PASSWORD=YourMinioRootPassword

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET_KEY=YourSuperSecretKeyMinimum32CharactersLongForJWT!@#
JWT_ISSUER=MsHuyenLC
JWT_AUDIENCE=MsHuyenLC
JWT_EXPIRATION_MINUTES=60

# ============================================
# Token Settings
# ============================================
PASSWORD_RESET_EXPIRATION_MINUTES=15
EMAIL_CONFIRMATION_EXPIRATION_HOURS=24

# ============================================
# Application Settings
# ============================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# ============================================
# Web Application Settings
# ============================================
# API_URL: Server-side API URL (for SSR in container)
# - When running in Docker: use service name (http://api:8080)
# - When running locally: use localhost (http://localhost:5000)
SERVERAPI_URL=http://api:8080

# CLIENT_API_URL: Client-side API URL (exposed to browser)
# - Development: http://localhost:5000
# - Production: https://your-domain.com (replace with actual domain)
CLIENT_API_URL=http://localhost:5000

# ============================================
# Email Service Settings
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@mshuyenlc.com
SMTP_FROM_NAME=MsHuyenLC

# ============================================
# Logging
# ============================================
LOG_LEVEL=Information
